# Maintainer: taotieren <admin@taotieren.com>

pkgname=repo-misc-tools-git
pkgver=1.3.2.r35.ga02562b
pkgrel=1
pkgdesc="repo miscellaneous tools"
arch=(any)
url="https://github.com/taotieren/repo-misc-tools"
license=('MIT')
provides=(${pkgname%-git})
conflicts=(${pkgname%-git})
depends=('libusb'
    'systemd-libs')
makedepends=('git')
source=("${pkgname%-git}::git+${url}.git")
sha256sums=('SKIP')

pkgver() {
    cd "${srcdir}/${pkgname}"
    (
        set -o pipefail
        git describe --long --tag --abbrev=7 2>/dev/null | sed 's/^v//g;s/\([^-]*-g\)/r\1/;s/-/./g' ||
            printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
    )
}

prepare() {
    git -C "${srcdir}/${pkgname}" clean -dfx
}

package() {
    cd "${srcdir}/${pkgname}/cleanup-repo-tools/"
    install -Dm0755 cleanup-repo-tool.sh "${pkgdir}/usr/bin/cleanup-repo-tool"
    install -Dm0644 -t cleanup-repo-tool.service "${pkgdir}/usr/lib/systemd/system"
    install -Dm0644 -t cleanup-repo-tool.timer "${pkgdir}/usr/lib/systemd/system"
}
